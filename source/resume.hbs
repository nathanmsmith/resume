<html>
  <head>
    <meta charset="utf-8" />
    <title>
      {{name}} - Resume
    </title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body>
    <header>
      <h1>
        {{header.name}}
      </h1>
      <ul>
        <li>
          <a href="{{header.website}}">
            {{header.website}}
          </a>
        </li>
        <li>
          <a href="mailto:{{header.email}}">
            {{header.email}}
          </a>
        </li>
        <li>
          <a href="https://github.com/{{header.github}}">
            {{header.github}}
          </a>
        </li>
        <li>
          <a href="https://linkedin.com/in/{{header.linkedin}}">
            {{header.linkedin}}
          </a>
        </li>
      </ul>
    </header>
    <main>
      <section id="col-1">
        <section id="education">
          <h2>
            Education
          </h2>
          <h3>
            {{education.school}}
          </h3>
          <p>
            {{education.major_type}} {{education.major}}
          </p>

          <h3>
            Relevant Coursework
          </h3>
          <ul>
            {{#each education.coursework}}
              <li>
                {{this}}
              </li>
            {{/each}}
          </ul>
        </section>
        <section id="skills">
          <h2>
            Skills
          </h2>
          <h3>
            Languages
          </h3>
          <ul>
            {{#each skills.languages}}
              <li>
                {{this}}
              </li>
            {{/each}}
          </ul>
          <h3>
            Frameworks and Technologies
          </h3>
          <ul>
            {{#each skills.frameworks_and_technologies}}
              <li>
                {{this}}
              </li>
            {{/each}}
          </ul>
        </section>
      </section>
      <section id="col-2">
        <section id="experience">
          <h2>
            Experience
          </h2>
          {{#each experience}}
            <div>
              <a href="{{this.url}}">
                {{this.company}}
              </a>
              <span class="job-title">
                {{this.title}}
              </span>
              <span class="job-dates">
                ({{this.dates}})
              </span>
              <ul>
                {{#each this.bullets}}
                  <li>
                    {{this}}
                  </li>
                {{/each}}
              </ul>
            </div>
          {{/each}}
        </section>

        <section id="projects">
          <h2>
            Selected Projects
          </h2>
        </section>
      </section>
    </main>
  </body>
</html>
